@page
@model BigMammaWebsite.Pages.Menukort.DeletePizzaModel
@{
}
<div class="form-group">
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.CurrentPizza.ID" class="control-label"></label>
            <input asp-for="@Model.CurrentPizza.ID" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.CurrentPizza.ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentPizza.Name" class="control-label"></label>
            <input asp-for="@Model.CurrentPizza.Name" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.CurrentPizza.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentPizza.Topping" class="control-label"></label>
            <input asp-for="@Model.CurrentPizza.Topping" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.CurrentPizza.Topping" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentPizza.Price" class="control-label"></label>
            <input asp-for="@Model.CurrentPizza.Price" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.CurrentPizza.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary btn-danger" />
            <input type="submit" value="Cancel" asp-page-handler="Cancel" class="btn btn-primary btn" />
        </div>
    </form>
</div>