    ViewData["Title"] = "Lav nye events";
}
<h1>Event skaber</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
             <div class="form-group">
                <label asp-for="@Model._event.Name" class="control-label"></label>
                <input asp-for="@Model._event.Name" class="form-control" />
