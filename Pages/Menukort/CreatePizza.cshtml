            </div>
            <div class="form-group">
                <label asp-for="@Model._event.Price" class="control-label"></label>
                <input asp-for="@Model._event.Price" class="form-control" />
                <span asp-validation-for="@Model._event.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div> 
        </form>
    </div>
</div>
